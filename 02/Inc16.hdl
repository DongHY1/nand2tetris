/**
 * 16-bit incrementer:
 * out = in + 1
 */
CHIP Inc16 {
    IN in[16];
    OUT out[16];
    PARTS:
    // Mux16 用来设置 temp 为一个常量值，其中最后一位是 1
    // 然后用Add16相加得到的结果就是Inc16
    Mux16(a=false, b[0]=true, b[1..14]=false, sel=true, out=temp);
    Add16(a =in , b =temp , out =out );
}